<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/rounded_corner_black">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_msg"
        android:textSize="@dimen/txt_exlarge_15"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:layout_gravity="center_horizontal"

        android:paddingTop="@dimen/padding_small_5"
        android:paddingBottom="@dimen/padding_small_5"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/padding_small_5"
        android:background="@color/grey">

    </LinearLayout>
    <TextView
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ok"
        android:textColor="@color/black"
        android:textStyle="bold"

        android:textSize="@dimen/txt_xxlarge_18"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:paddingTop="@dimen/padding_small_5"
        android:paddingBottom="@dimen/padding_small_5"/>

</LinearLayout>